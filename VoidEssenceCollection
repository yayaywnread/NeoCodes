// ==UserScript==
// @name         Auto Click and Refresh tvw-essence Elements
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Automatically clicks on elements with 'tvw-essence' in their class and refreshes the page after clicking
// @author       YourName
// @match        *://www.neopets.com/*
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    // Function to click elements with 'tvw-essence' class
    function clickElementsWithClass() {
        // Get all elements that contain 'tvw-essence' in their class
        var elements = document.querySelectorAll('[class*="tvw-essence"]');

        // Loop through all elements and click them
        elements.forEach(function(element) {
            // Check if the element is visible and clickable
            if (element.offsetParent !== null) {
                element.click();
                console.log('Clicked on:', element);

                // Refresh the page after clicking the first element
                setTimeout(function() {
                    location.reload();  // Refresh the page after 1 second
                }, 1000);

                return;  // Stop after the first click to prevent multiple refreshes
            }
        });
    }

    // Wait for the page to load before running
